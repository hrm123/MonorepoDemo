{
  "name": "ui-widget",
  "$schema": "../node_modules/nx/schemas/project-schema.json",
  "projectType": "application",
  "sourceRoot": "shared/src",
  "tags": [],
  "targets": {
    "build": {
      "executor": "@nx/webpack:webpack",
      "outputs": ["{options.outputPath}"],
      "defaultConfiguration": "production",
      "options": {
        "target": "web",
        "outputPath": "dist/shared",
        "compiler": "swc",
        "main": "shared/src/main.ts",
        "tsConfig": "shared/tsconfig.app.json",
        "webpackConfig": "shared/webpack.config.js",
        "assets": ["shared/src/favicon.ico", "shared/src/assets"],
        "index": "shared/src/index.html",
        "baseHref": "/",
        "styles": ["shared/src/styles.scss"],
        "scripts": []
      },
      "configurations": {
        "production": {
          "optimization": true,
          "outputHashing": "all",
          "sourceMap": false,
          "namedChunks": false,
          "extractLicenses": true,
          "vendorChunk": false,
          "fileReplacements": [
            {
              "replace": "shared/src/environments/environment.ts",
              "with": "shared/src/environments/environment.prod.ts"
            }
          ]
        }
      }
    },
    "serve": {
      "executor": "@nx/webpack:dev-server",
      "options": {
        "buildTarget": "ui-widget:build"
      },
      "configurations": {
        "production": {
          "buildTarget": "ui-widget:build:production"
        }
      }
    },
    "lint": {
      "executor": "@nx/eslint:lint",
      "outputs": ["{options.outputFile}"]
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "options": {
        "jestConfig": "shared/jest.config.ts"
      }
    }
  }
}
